{
  "title": "Make shift keys double as curly braces on tap",
  "rules": [
    {
      "description": "Make shift keys double as curly braces on tap",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift"
          },
          "to_if_alone": [
            {
              "key_code": "open_bracket",
              "modifiers": [
                "left_shift"
              ]
            }
          ],
          "to": [
            {
              "key_code": "left_shift"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift"
          },
          "to_if_alone": [
            {
              "key_code": "close_bracket",
              "modifiers": [
                "right_shift"
              ]
            }
          ],
          "to": [
            {
              "key_code": "right_shift"
            }
          ]
        }
      ]
    }
  ]
}
