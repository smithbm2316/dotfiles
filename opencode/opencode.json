{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "share": "disabled",
  "theme": "catppuccin",
  "keybinds": {
    "leader": "ctrl+x",
    "messages_page_up": "ctrl+b",
    "messages_page_down": "ctrl+f",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+shift+g"
  },
  "permission": {
    "bash": {
      "*": "ask",
      "git *": "allow",
      "npm test *": "allow",
      "rm *": "deny"
    },
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "lsp": "allow",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "todoread": "allow",
    "todowrite": "allow",
    "skill": "ask",
    "codesearch": "deny",
    "doom_loop": "deny",
    "edit": "deny",
    "external_directory": "deny",
    "webfetch": "deny",
    "websearch": "deny"
  },
  "default_agent": "plan",
  "model": "openai/gpt-5.2-codex"
}
