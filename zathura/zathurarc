set render-loading-fg           "#cfe7fc" # fg

# Recolor book content's color
set recolor-lightcolor          "#3f3740" # bg
set recolor-darkcolor           "#cfe7fc" # fg
set recolor                     "true"
# set recolor-keephue             true      # keep original color

# Startup options
