# vim: filetype=dosini
# This is Git's per-user configuration file.
[user]
	name = Ben Smith
[includeIf "gitdir:~/code/"]
  path = ./gh_personal
[includeIf "gitdir:~/dotfiles/"]
  path = ./gh_personal
[includeIf "gitdir:~/vincit/"]
  path = ./gh_vincit
[alias]
	aa = add -A
  cm = commit
  cmf = commit --no-verify
  cmm = commit -m 
	cma = "!gcma() { git add -A; git commit -m \"$1\"; }; gcma"
	pushup = push -u origin HEAD
  s = status
	i = init 
	l = log --oneline
	cl = clone
  sw = switch
  swp = switch -
  bra = branch -a
  brd = branch -d
  nb = checkout -b
  stall = stash push -u -m
[core]
	excludesFile = ~/.config/git/ignore
[color]
	ui = auto
[init]
	defaultBranch = main
[fetch]
	prune = true
[pull]
	rebase = true
[advice]
	addIgnoredFile = false
