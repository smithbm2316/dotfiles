# vim: ft=gitconfig
# This is Git's per-user configuration file.
[include]
  path = './sendemail'
[advice]
	addIgnoredFile = false
[alias]
	aa = add -A
  bra = branch -a
  brd = branch -d
  clb = "!$HOME/dotfiles/scripts/git-bare-clone.sh"
	cl = clone
  cma = commit --amend --no-edit
  cmam = commit --amend
  # cma = "!gcma() { git add -A; git commit -m \"$1\"; }; gcma"
  cm = commit
  cmfa = commit --no-verify --amend
  cmf = commit --no-verify
	i = init 
  latest = "!glatest() { current_branch=\"$(git branch --show-current)\"; main_branch=\"${1:-main}\"; git checkout \"$main_branch\"; git pull; git checkout \"$current_branch\"; }; glatest"
  lb = branch
  lbr = branch --remote
	l = log --oneline
  nb = checkout -b
  pushf = push --force-with-lease
	pushup = push -u origin HEAD
  ri = rebase -i
  rsl = reset --soft HEAD~1
  rs = restore --staged
  s = status -u
  st = stash push -u
  swp = switch -
  sw = switch
  wta = worktree add
  wtls = worktree list
  wtr = worktree remove
  wt = worktree
[color]
	ui = auto
[commit]
  template = ~/dotfiles/git/templates/commit
[core]
	excludesFile = ~/dotfiles/git/ignore
  editor = nvim
  pager = delta
[delta]
  light = false
  line-numbers = true
  line-numbers-left-format = ""
  navigate = true
  side-by-side = false
  tabs = 2
[diff]
  colorMoved = default
[fetch]
	prune = true
[init]
	defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[merge]
  conflictstyle = diff3
[pull]
	rebase = true
[stash]
  showPatch = true
  showStat = true
  showIncludeUntracked = true
[user]
	name = Ben Smith
	email = bsmithdev@mailbox.org
[includeIf "gitdir/i:~/vincit/"]
  path = ~/dotfiles/git/vincit
