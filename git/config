# vim: ft=gitconfig
# This is Git's per-user configuration file.
[user]
	name = Ben Smith
[includeIf "gitdir:~/code/"]
  path = ./gh_personal
[includeIf "gitdir:~/dotfiles/"]
  path = ./gh_personal
[includeIf "gitdir:~/vincit/"]
  path = ./gh_personal
[alias]
	aa = add -A
  cm = commit
  cma = commit --amend
  cmf = commit --no-verify
  cmfa = commit --no-verify --amend
  # cma = "!gcma() { git add -A; git commit -m \"$1\"; }; gcma"
  pushf = push --force-with-lease
	pushup = push -u origin HEAD
  s = status -u
	i = init 
	l = log --oneline
	cl = clone
  clb = "!gclb() { git clone --bare \"$1\" .bare; echo 'gitdir: ./.bare' > .git; }; gclb"
  latest = "!glatest() { current_branch=\"$(git branch --show-current)\"; main_branch=\"${1:-main}\"; git checkout \"$main_branch\"; git pull; git checkout \"$current_branch\"; }; glatest"
  sw = switch
  swp = switch -
  bra = branch -a
  brd = branch -d
  lb = branch
  lbr = branch --remote
  nb = checkout -b
  stall = stash push -u -m
  wt = worktree
  wta = worktree add
  wtr = worktree remove
  wtls = worktree list
  ri = rebase -i
  rsl = reset --soft HEAD~1
[core]
	excludesFile = ~/.config/git/ignore
  editor = nvim
  pager = delta
[color]
	ui = auto
[init]
	defaultBranch = main
[fetch]
	prune = true
[pull]
	rebase = true
[advice]
	addIgnoredFile = false
[interactive]
  diffFilter = delta --color-only
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[delta]
  navigate = true
  light = false
  side-by-side = false
  line-numbers = true
